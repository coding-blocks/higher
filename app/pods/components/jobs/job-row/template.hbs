<div class="row no-gutters align-items-center justify-content-between">
  <div class="col-md-4 col-sm-6 col-12">
    <div class="row no-gutters align-items-center">
      <div class="col-3">
        {{#if job.company.logo}}
          <img class="s-80x80" src={{job.company.logo}} alt={{job.company.name}}>
        {{else}}
          <i class="far fa-building fa-4x"></i>
        {{/if}}
      </div>
      <div class="col-9">
        <h5 class="bold">{{job.title}}</h5>
        <div class="font-normal mt-2 dark-grey">
          {{job.company.name}}
          <span class="black">Posted {{moment-from-now (unix job.postedOn)}}</span>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-2 col-sm-3 col-6 mt-sm-0 mt-3">
    <div class="font-normal">
      Experience:
      <span class="bold">{{job.experience}} Years</span>
    </div>
    <div class="font-normal mt-2">
      CTC:
      <span class="bold">{{job.ctc}} LPA</span>
    </div>
  </div>

  <div class="col-md-2 col-sm-3 col-6 mt-sm-0 mt-3">
    <div class="font-normal">
      Type: 
      <span class="bold">
        {{#if (eq job.type 'fulltime')}}
          Full Time
        {{else if (eq job.type 'internship')}}
          Internship
        {{else }}
          Part Time
        {{/if}}
      </span>
    </div>
    <div class="font-normal mt-2">Location: 
      <span class="bold commafy">
        {{#each job.locations as |location|}}
          <span>{{location.name}}</span>
        {{/each}}
      </span>
    </div>
  </div>

  <div class="d-md-block d-none">
    <LinkTo @route="jobs.id" @model={{job.id}} class="button-dashed button-orange">View Details</LinkTo>
  </div>
  <div class="d-md-none d-block d-flex justify-content-center w-100 mt-3">
    <LinkTo @route="jobs.id" @model={{job.id}} class="button-dashed button-orange">View Details</LinkTo>
  </div>
</div>