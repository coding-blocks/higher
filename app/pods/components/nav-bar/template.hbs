        <LinkTo @route="applicants" class="orange font-sm">
          Are you a student?
        </LinkTo>
      </li>
      {{else}}
      <li class="top-nav-option hoverable px-3 d-sm-block d-none">
        <LinkTo @route="recruiter" class="orange font-sm">
          Are you hiring?
        </LinkTo>
      </li>
