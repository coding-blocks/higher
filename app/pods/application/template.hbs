<cb-mobile-verification class="hide-cb-mobile-verification-prompt" />
<NavBar @showLoginDialog={{showLoginDialog}}/>
{{#if (and showLoginDialog (not session.isAuthenticated))}}
  {{#modal-dialog
          onClose=(action (mut showLoginDialog) false)
          targetAttachment="none"
          translucentOverlay=true
          containerClass='centered-scrolling-container w-40 mt-3'
          overlayClass='centered-scrolling-overlay'
          wrapperClass='centered-scrolling-wrapper'
        }}
    <LoginDialog />
  {{/modal-dialog}}
{{/if}}
{{#unless sidenav.isHidden}}
  <SideNav />

  <div class="row justify-content-center mx-0">
    <div class="offset-0 offset-md-1 col-11 px-lg-5 px-md-4 px-0 pt-4">
      <div class="container">
        {{outlet}}
      </div>
    </div>
  </div>

{{else}}
  {{outlet}}
  <Footer />
{{/unless}}

{{#if showMobileVerificationDialog}}
<script>
  document.getElementsByTagName('cb-mobile-verification')[0].classList.remove('hide-cb-mobile-verification-prompt')  
</script>
{{/if}}